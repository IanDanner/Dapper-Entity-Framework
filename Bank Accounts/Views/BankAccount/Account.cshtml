@{
    ViewData["Title"] = "Account";
}

<h1>Welcome, @ViewBag.Account.firstName</h1>
<h3>Current Balance: $@ViewBag.Account.balance</h3>

<form asp-action="transaction" asp-controller="BankAccount" method="POST">
    <span>@TempData["errors"]</span>
    <label>Deposit/Withdrawl</label><input type="number" step="0.01" value="change" name="change">
    <input type="submit" type="Submit">
</form>

<div>
    <table>
        <thead>
            <th>Amount</th>
            <th>Date</th>
        </thead>
        <tbody>
            @{
                @foreach(var transaction in ViewBag.Account.Transactions) {
                <tr>
                    <td>@transaction.amount</td>
                    <td>@transaction.date_of_transaction.ToString("MMM dd yyyy")</td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>